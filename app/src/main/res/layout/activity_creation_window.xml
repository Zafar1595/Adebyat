<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.creation.creation_window.CreationWindowActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_android_mobile_background"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/textViewCreationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="Hello"
        android:background="@drawable/bg_text_view"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        />
    <ProgressBar
        android:id="@+id/progress_bar_author"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textViewCreationName"
        app:layout_constraintBottom_toTopOf="@id/exo_container"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/textViewCreationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:background="@drawable/bg_text_view"
            android:text="jtjeadsdasdasfdsfsdfsadfadsfasfdsafdsgsfdgfgsdfgdgfdsgdfg"/>

    </ScrollView>

        <LinearLayout
            android:id="@+id/exo_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/layout_bg_item_creation"
            android:visibility="gone"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp">
                <ProgressBar
                    android:id="@+id/progressBarPlaying"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/playBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="playBtnClick"
                    android:background="@drawable/play"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/elapsedTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:11"
                    android:layout_gravity="center_vertical"/>
                <SeekBar
                    android:id="@+id/positionBar"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/remainingTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-1:11"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>


        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>