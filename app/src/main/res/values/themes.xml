<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Adebyat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textViewStyleOnSelected" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textViewStyleOnNotSelected" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/common_google_signin_btn_text_light_default</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="searchViewStyle" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="background">@color/bg_item_creation</item>
    </style>
</resources>